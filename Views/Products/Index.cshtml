@model IEnumerable<Product>
@{
    ViewData["Title"] = "Products";
}

<div class="text-center">
    <h1 class="display-4">Game of Reviews</h1>

    <table class="table">
        <thead class="thead-dark">
            <tr>
                <th scope="col">Product</th>
                <th scope="col">Reviews</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <td class="text-left">
                        @product.Name
                    </td>
                    <td>
                        <a asp-controller="Reviews" asp-action="Index" asp-route-id="@product.Id">View @product.ReviewCount review(s)</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<form asp-action="Add" method="post">
    <div class="form-group">
        <input type="text" class="form-control" rows="3" name="productName" />
    </div>
    <div class="form-group">
        <input type="submit" value="Add!" class="btn btn-primary" />
    </div>
</form>